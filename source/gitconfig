[diff]
    algorithm = histogram
    mnemonicprefix = true
    colorMoved = plain
    renames = true

[color "status"]
    header = blue
    changed = yellow
    added = green
    untracked = red

[color "branch"]
    current = yellow bold
    remote = red
    local = blue

[color "diff"]
    meta = yellow
    frag = blue
    old = red
    new = green

[push]
    default = simple
    autoSetupRemote = true

[advice]
    statusHints = false
    detachedHead = false
    pushNonFastForward = false
    commitBeforeMerge = false
    resolveConflict = false

[include]
    path = ~/.gitconfig.local

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    required = true
    process = git-lfs filter-process

[status]
    showUntrackedFiles = all

[merge]
    log = true

[protocol]
    version = 2

[pull]
    rebase = false

